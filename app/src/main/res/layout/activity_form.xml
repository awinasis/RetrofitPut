<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FormActivity">

    <TextView
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Mahasiswa"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#000"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/txt_nim"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIM :"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edit_nim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="masukkan nim"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/txt_nama"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama :"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edit_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="masukkan nama"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/txt_alamat"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:text="Alamat :"/>

    <EditText
        android:id="@+id/edit_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="masukkan alamat"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/txt_jk"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jenis Kelamin :"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edit_jk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="masukkan jenis kelamin"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/txt_telp"
        android:layout_width="wrap_content"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:text="No Telp :"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edit_telp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="masukkan no.telp"
        android:inputType="number"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:text="Submit"/>

</LinearLayout>