<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateActivity">

    <TextView
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Mahasiswa"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#000"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/txt_nim"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:text="NIM :"/>

    <EditText
        android:id="@+id/update_nim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ubah nim"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/txt_nama"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama :"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/update_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ubah nama"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/txt_alamat"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:text="Alamat :"/>

    <EditText
        android:id="@+id/update_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ubah alamat"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/txt_jk"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jenis Kelamin :"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/update_jk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ubah jenis kelamin"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/txt_telp"
        android:layout_width="wrap_content"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:text="No Telp :"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/update_telp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ubah no.telp"
        android:inputType="number"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:text="Update"/>

</LinearLayout>